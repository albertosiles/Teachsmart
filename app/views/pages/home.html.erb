<body>
    <header class="header">
        <h1>TeachSmart</h1>
    </header>
    <div class="center-image">
        <div class="image-container">
            <!-- Carousel -->
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="10000">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="<%= asset_path('landingpage.jpg') %>" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h5>Welcome to our community of dedicated educators!</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="<%= asset_path('image5.jpg') %>" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h5>An app for teachers to share planning, resources and networking.</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="<%= asset_path('image4.jpg') %>" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h5>Welcome to a place where educators unite, innovate and inspire.</h5>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <div class="image-text">
                    <%= link_to "Discover More", resources_path, class: "discover-link" %>
                </div>
            </div>
        </div>
    </div><!-- End Carousel -->
<div class="container white-container2 custom-height">
    <%# <h2>What We Offer</h2> %>
    <div class="row">
        <div class="col-md-4">
            <div class="card pale-purple-card">
                <%# <i class="fa-solid fa-person-chalkboard"></i> %>
                <div class="card-body">
                    <h5 class="card-title text-center">Teaching Materials</h5>
                    <p class="card-text text-center">Discover and share teaching materials, including lesson plans, worksheets and more.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card pale-purple-card">
                <%# <i class="fa-solid landing-comments fa-comments"></i> %>
                <div class="card-body">
                    <h5 class="card-title text-center">Online Chat</h5>
                    <p class="card-text text-center">A chat platform for teachers to share and discuss educational resources in real-time.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card pale-purple-card">
                <%# <i class="fa-solid landing-star fa-star"></i> %>
                <div class="card-body">
                    <h5 class="card-title text-center">Rating and reviews</h5>
                    <p class="card-text text-center">As a member of our community, rate and review other teachers' materials.</p>
                </div>
            </div>
        </div>
    </div>
</div>

