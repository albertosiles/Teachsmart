<%= link_to "Resources List", resources_path %>
<p>Title: <%= @resource.title %></p>
<p>Description: <%= @resource.description %></p>
<p>Subject: <%= @resource.subject %></p>
<p>Student age: <%= @resource.student_age %></p>
<p>Category: <%= @resource.category %></p>
<p>Type: <%= @resource.resource_type %></p>

<%= button_to 'Bookmark', bookmark_resource_path(@resource), method: :post %>

<% if current_user.bookmarks.exists?(resource_id: @resource.id) %>
  <%= button_to 'Remove from bookmarks', bookmark_path(@resource), method: :delete %>
<% end %>

<ul>
	<% @resource.reviews.each do |review| %>
	<li><%= "star-icon" * @resource.rating %> - <%= review.content %></li>
	<% end %>
	</ul>
