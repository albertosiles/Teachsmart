<h1>Edit Profile</h1>

<%= simple_form_for @profile do |form| %>
  <%= form.error_notification %>

  <div class="form-inputs">
    <%= form.input :first_name %>
    <%= form.input :last_name %>
    <%= form.input :description %>
    <%= form.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= form.button :submit %>
  </div>
<% end %>
